#:import dp kivy.metrics.dp

<AdminRegisterForm>:
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Rectangle:
                source: "images/background.jpg"
                pos: self.pos
                size: self.size

        # ---------- HEADER ----------
        BoxLayout:
            size_hint_y: None
            height: dp(100)
            padding: dp(30), dp(10)
            spacing: dp(10)
            canvas.before:
                Color:
                    rgba: 0.56,0.42,0.80,1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                source: "images/logo.png"
                size_hint_x: None
                width: dp(80)

            Label:
                text: "Admin Register"
                font_size: "26sp"
                bold: True
                color: 1,1,1,1

            AnchorLayout:
                anchor_x: 'right'
                size_hint_x: None
                width: dp(70)
                ImageButton:
                    id: profile_button
                    source: root.profile_pic
                    size_hint: None, None
                    size: dp(50), dp(50)
                    on_release: root.open_profile_dropdown(self)
                    canvas.before:
                        Color:
                            rgba: 1,1,1,1
                        Ellipse:
                            pos: self.pos
                            size: self.size

        # ---------- FORM CONTENT ----------
        ScrollView:
            do_scroll_x: False
            bar_width: dp(10)

            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(20)
                padding: dp(20)

                AnchorLayout:
                    anchor_x: "center"
                    size_hint_y: None
                    height: dp(600)

                    BoxLayout:
                        orientation: "vertical"
                        size_hint: None, None
                        size: dp(500), dp(600)
                        padding: dp(20)
                        spacing: dp(14)
                        canvas.before:
                            Color:
                                rgba: 1, 1, 1, 0.95
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [15]
                            Color:
                                rgba: 0, 0, 0, 0.15
                            RoundedRectangle:
                                pos: [self.x+4, self.y-4]
                                size: self.size
                                radius: [15]

                        Label:
                            text: "[b]Student Registration[/b]"
                            markup: True
                            font_size: "24sp"
                            color: 0,0,0,1
                            size_hint_y: None
                            height: dp(50)

                        # Inputs (same as before)...
                        TextInput:
                            id: fname
                            hint_text: "First Name"
                            multiline: False
                            size_hint_y: None
                            height: dp(40)

                        TextInput:
                            id: lname
                            hint_text: "Last Name"
                            multiline: False
                            size_hint_y: None
                            height: dp(40)

                        TextInput:
                            id: email
                            hint_text: "Email"
                            multiline: False
                            size_hint_y: None
                            height: dp(40)

                        TextInput:
                            id: phone
                            hint_text: "Phone"
                            multiline: False
                            size_hint_y: None
                            height: dp(40)

                        TextInput:
                            id: location
                            hint_text: "Location"
                            multiline: False
                            size_hint_y: None
                            height: dp(40)

                        Button:
                            id: course_field
                            text: "Select Course"
                            size_hint_y: None
                            height: dp(40)
                            on_release: root.open_course_dropdown()

                        Button:
                            id: language_field
                            text: "Select Language"
                            size_hint_y: None
                            height: dp(40)
                            on_release: root.open_language_dropdown()

                        Button:
                            id: start_date_field
                            text: "Select Date"
                            size_hint_y: None
                            height: dp(40)
                            on_release: root.open_calendar()

                        Label:
                            text: root.message
                            markup: True
                            font_size: "15sp"
                            halign: "center"
                            size_hint_y: None
                            height: dp(22)

                        BoxLayout:
                            orientation: "horizontal"
                            spacing: dp(10)
                            size_hint_y: None
                            height: dp(50)

                            Button:
                                text: "Cancel"
                                background_normal: ""
                                background_color: 1, 0, 0, 1
                                color: 1,1,1,1
                                on_release: root.clear_form()

                            Button:
                                text: "Submit"
                                background_normal: ""
                                background_color: 0, 0.7, 0, 1
                                color: 1,1,1,1
                                on_release: root.submit_form()

                # Back Button
                AnchorLayout:
                    anchor_x: "center"
                    size_hint_y: None
                    height: dp(60)

                    Button:
                        text: "⬅️  Back to Resources"
                        font_size: '18sp'
                        bold: True
                        size_hint: None, None
                        size: dp(250), dp(50)
                        background_normal: ''
                        background_color: 0.0, 0.48, 1, 1
                        color: 1,1,1,1
                        on_release: root.go_back_to_resources()
                        canvas.before:
                            Color:
                                rgba: self.background_color
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [12]

        # ---------- FOOTER ----------
        BoxLayout:
            size_hint_y: None
            height: dp(40)
            canvas.before:
                Color:
                    rgba: 0.56,0.42,0.80,1
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "ChakoraHub © 2025. All rights reserved."
                color: 1,1,1,1
                halign: "center"
                valign: "middle"
                text_size: self.size
