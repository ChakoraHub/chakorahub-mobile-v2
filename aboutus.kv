<AboutUsScreen>:
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1   # Light background
            Rectangle:
                pos: self.pos
                size: self.size

        # Top bar with logo
        BoxLayout:
            size_hint_y: None
            height: dp(80)
            padding: dp(10)
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'center'
                Image:
                    source: "images/logo.png"
                    size_hint: None, None
                    size: dp(180), dp(90)
                    allow_stretch: True
                    keep_ratio: True

        # Top spacer to push content down
        Widget:
            size_hint_y: 0.1

        # Main content area - CENTERED WITH PROPER SIZING
        BoxLayout:
            orientation: "vertical"
            size_hint_y: 0.8  # Take most of the space
            padding: dp(20)
            
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                
                BoxLayout:
                    orientation: "horizontal"
                    size_hint: None, None
                    size: min(root.width * 0.92, 1100), min(root.height * 0.7, 700)
                    padding: dp(35)
                    spacing: dp(35)
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1   # White card
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [dp(20)]

                    # Founder image
                    BoxLayout:
                        size_hint_x: None
                        width: dp(280)
                        size_hint_y: 1
                        AnchorLayout:
                            anchor_x: 'center'
                            anchor_y: 'center'
                            AsyncImage:
                                id: founder_image
                                source: "images/aboutus.jpg"
                                size_hint: None, None
                                size: dp(250), dp(250)
                                allow_stretch: True
                                keep_ratio: True
                                mipmap: True

                    # Text content - FIXED TO SHOW ALL TEXT
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_x: 1
                        size_hint_y: 1
                        spacing: dp(15)

                        # Title
                        Label:
                            text: "[b][color=6A0DAD]About the Founder[/color][/b]"
                            markup: True
                            font_size: dp(22)
                            size_hint_y: None
                            height: dp(30)
                            halign: "left"
                            valign: "middle"
                            text_size: self.width, None

                        # Text content - FIXED TO SHOW ALL TEXT
                        ScrollView:  # Add scroll only for text if needed
                            do_scroll_x: False
                            bar_width: dp(5)
                            
                            Label:
                                id: content_label
                                text: root.about_text
                                markup: True
                                font_size: dp(16)
                                color: 0, 0, 0, 1
                                halign: "left"
                                valign: "top"
                                text_size: self.width, None
                                size_hint_y: None
                                height: max(self.texture_size[1], root.height * 0.5)
                                line_height: 1.3

        # Bottom spacer to center content
        Widget:
            size_hint_y: 0.1

        # Home button
        BoxLayout:
            size_hint_y: None
            height: dp(60)
            padding: dp(5)
            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"
                Button:
                    text: "Home"
                    size_hint: None, None
                    size: dp(150), dp(45)
                    background_color: (0.29, 0.08, 0.55, 1)
                    color: (1,1,1,1)
                    font_size: dp(16)
                    on_release: root.go_home()

        # Small bottom spacer
        Widget:
            size_hint_y: None
            height: dp(20)